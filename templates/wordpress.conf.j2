<VirtualHost *:80> 
    DocumentRoot {{ wordpress_dir }}
    <Directory {{ wordpress_dir }}>
        Options FollowSymLinks
        AllowOverride Limit Options FileInfo
        DirectoryIndex index.php
        Require all granted
    </Directory>
    <Directory {{ wordpress_dir }}/wp-content>
        Options FollowSymLinks
        Require all granted
    </Directory>
</VirtualHost>